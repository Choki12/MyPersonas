@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="tests">
    <h1> My available tests on @System.DateTime.Now.Year</h1>
    @if (Model.Tests == null)
    {
        <div class="tests">
            <h2>No tests available as yet</h2>
        </div>
    }

    else
    {
        @foreach (var tests in Model.Tests)
        {
            <h2>tests.DateTaken?.ToString()</h2>

            <ul>
                @foreach (var test in tests)
                {
                    <li>@test</li>
                }
            </ul>
        }
    }


</div>
