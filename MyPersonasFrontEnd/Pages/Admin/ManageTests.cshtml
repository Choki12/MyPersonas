@page "{id}"
@model ManageTestsModel
@{
}

<h3 style="text-align:center">Edit Tests</h3>
<ol class="breadcrumb">
    <li class="breadcrumb-item"><a asp-page="/Index">Home</a><text>/&nbsp;</text><a authz-policy="Admin" asp-page="/Admin/TestList">View Tests</a></li>
</ol>

@if (Model.ShowMessage)
{
    <div class="alert alert-success alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span>   </button>
        @Model.Message
    </div>
}

<form method="post" class="form-horizontal">
    <div asp-validation-summary="All" class="text-danger"></div>
    <input asp-for="@Model.Tests.Id" type="hidden" />
    <div class="form-group">
        <label class="col-md-2 control-label"><b>Test Date</b></label>
        <div class="col-md-10">
            <input type="date" asp-for="@Model.Tests.DateTaken" class="form-control" value="@Model.Tests.DateTaken"/>
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label"><b>Test Type</b></label>
        <div class="col-md-10">
            <textarea asp-for="@Model.Tests.Type" class="form-control"></textarea>
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label"><b>State of Test</b></label>
        <div class="col-md-10">
            <input asp-for="@Model.Tests.TestState" class="form-control" value="Incomplete"/>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button type="submit" class="btn btn-primary">Save changes</button>
            <button type="submit" asp-page-handler="Delete" class="btn btn-danger">Delete</button>
        </div>
    </div>
</form>
