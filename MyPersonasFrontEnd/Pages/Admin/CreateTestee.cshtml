@page
@model MyPersonasFrontEnd.Pages.Admin.CreateTesteeModel
@{
    byte[] buffer = Guid.NewGuid().ToByteArray();
    var num = BitConverter.ToInt32(buffer, 8);
}

<h3 style="text-align:center">Create Testee</h3>

@if (Model.ShowMessage)
{
    <div class="alert alert-success alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span>   </button>
        @Model.Message
    </div>
}

<form method="post" class="form-horizontal">
    <div asp-validation-summary="All" class="text-danger"></div>
    <input asp-for="Testees.Id" type="hidden" value="@num" readonly />
    <div class="form-group">
        <label class="col-md-2 control-label"><b>Name</b></label>
        <div class="col-md-10">
            <input asp-for="Testees.Name" class="form-control" placeholder="Enter Name" />
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label"><b>Surname</b></label>
        <div class="col-md-10">
            <input class="form-control" type="text" asp-for="Testees.Surname" placeholder="Enter Surname"/>
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label"><b>Date of Birth</b></label>
        <div class="col-md-10">
            <input class="form-control" type="date" asp-for="Testees.DOB" placeholder="Enter Date of Birth" />
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label"><b>Email</b></label>
        <div class="col-md-10">
            <input class="form-control" asp-for="Testees.Email" placeholder="Enter Email" />
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label"><b>Username</b></label>
        <div class="col-md-10">
            <input class="form-control" asp-for="Testees.UserName" placeholder="Enter UserName" />
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button type="submit" class="btn btn-primary">Create testee</button>
        </div>
    </div>
</form>

