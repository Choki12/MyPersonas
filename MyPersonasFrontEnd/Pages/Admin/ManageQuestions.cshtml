@page "{id}"
@model MyPersonasFrontEnd.Pages.Admin.ManageQuestionsModel
@{
}


<h3 style="text-align:center">Edit Questions</h3>

    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-page="/Index">Home</a><text>/&nbsp;</text><a authz-policy="Admin" asp-page="/Admin/QuestionsList">View Questions</a></li>
    </ol>


@if (Model.ShowMessage)
{
    <div class="alert alert-success alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span>   </button>
        @Model.Message
    </div>
}

<form method="post" class="form-horizontal">
    <div asp-validation-summary="All" class="text-danger"></div>
    <input asp-for="@Model.Question.Id" type="hidden" />
    <input asp-for="@Model.Question.Answer" type="hidden" value="null" readonly />
    <div class="form-group">
        <label class="col-md-2 control-label"><b>Question Number</b></label>
        <div class="col-md-10">
            <input type="number" asp-for="@Model.Question.Number" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label"><b>Question</b></label>
        <div class="col-md-10">
            <input type="text" asp-for="@Model.Question.Question" class="form-control" value="@Model.Question.Question" />
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label"><b>State of Question</b></label>
        <div class="col-md-10">
            <input asp-for="@Model.Question.State" class="form-control" value="Incomplete" />
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button type="submit" class="btn btn-primary">Save changes</button>
            <button type="submit" asp-page-handler="Delete" class="btn btn-danger">Delete</button>
        </div>
    </div>
</form>